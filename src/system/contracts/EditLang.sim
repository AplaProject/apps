contract EditLang {
    data {
        Id int
        Trans string
    }

    conditions {
        EvalCondition("@1parameters", "changing_language", "value")
        $lang = DBFind("@1languages").Where({id: $Id, ecosystem: $ecosystem_id}).Row()
        if (!$lang){
            warning LangRes("@1item_not_found", "en")
        }
    }

    action {
        EditLanguage($Id, $lang["name"], $Trans)
    }
}